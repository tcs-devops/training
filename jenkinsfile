pipeline{
  agent any
  
  tools{
  maven 'm3'
  }
  
  stages{
  
    stage ('Hello'){
      steps{
      echo 'Hi all'
      }
    }
    stage ('Good morning'){
      steps{
      echo 'So good so good so good' 
      }
    }
    stage ('Bye'){
      steps{
      echo 'Good night'
      }
    }
    stage('Checkout') {
    
      steps {
          checkout ([$class: 'GitSCM',
                     branches: [[name:  '*/master' ]],
                     userRemoteConfigs: [[url: 'https://github.com/jenkins-docs/simple-java-maven-app.git' ]]])
      }    
    }
    stage('Build'){
        
      steps{        
          sh '''ls 
            pwd
            mvn clean install
             '''     
      }
    }
    tage('Test') {
    
      steps{
          sh 'mvn test'
      }
            post {
                always {
                    junit 'target/surefire-reports/*.xml'
     }
    }
   } 
    
  }
}
